        }

        .content3-text {
            max-width: 400px;
            padding: 1rem 0;
            margin: 0;
        }

            .content3-text h2 {
                font-size: 35px;
            }

        .input-group {
            display: flex;
            flex-direction: column;
            margin: 0.7rem 0;
        }

        label {
            font-size: 18px;
            margin-bottom: 10px;
        }

        input {
            padding: 10px 15px;
            border: 0.3px solid #ccc; /* Light gray border */
            border-radius: 8px;
            margin: 0;
            font-size: 16px;
            font-weight: 300;
        }


            input:active {
                border-color: lightgrey; /* Light gray border on focus */
            }

        .button-group {
            display: flex;
            flex-direction: column;
            margin-top: 20px;
        }

        button {
            padding: 15px 20px;
            background-color: none; /* Red button background color */
            border: 1.5px black solid;
            color: black;
            border: none;
            border-radius: 8px;
            font-size: 20px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            button:hover {
                background-color: black;
                color: #fff
            }

        #register-prompt-link {
            text-decoration: none;
        }

            #register-prompt-link:hover {
                color: darkgreen;
            }
    </style>
</head>
<body style="background: whitesmoke">
<section class="content7">
    <div class="wrapper">
        <div class="wrap">
            <img class="img" src="~/images/p3.jpg" alt="The Health Foundation logo">
        </div>
        <div class="content3-text">
                <h2>Login to your account</h2><br />
                <form id="login-form">
                    <div class="input-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" required autocomplete="off">
                    </div>
                    <div class="input-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" required autocomplete="off">
                    </div>
                    
                    <div class="button-group">
                        <button type="button" id="login-button">Login</button>
                    </div>
                </form>
                <div id="error-message" style="color: red;"></div>
                <div id="success-message" style="color: green;"></div>
                <br /><br />
                <p>Don't have an account?   <a href="./Register" id="register-prompt-link">Register</a></p>
        </div>

    </div>

</section>

<script type="text/javascript">
    window.addEventListener('scroll', reveal);

    function reveal() {
        var reveals = document.querySelectorAll('.reveal');

        for (var i = 0; i < reveals.length; i++) {

            var windowheight = window.innerHeight;
            var revealtop = reveals[i].getBoundingClientRect().top;
            var revealpoint = 150;

            if (revealtop < windowheight - revealpoint) {
                reveals[i].classList.add('active');
            }
            else {
                reveals[i].classList.remove('active');
            }
        }
    }

</script>
